{
  "tasks": {
    "start": "deno run --env --allow-net --allow-env --allow-run src/main.ts",
    "start:worker": "deno run --env --allow-net --allow-env --allow-run src/worker/main.ts",
    "dev": "deno run --watch --env --allow-net --allow-env --allow-run  src/main.ts",
    "dev:worker": "deno run --watch --env --allow-net --allow-env --allow-run  src/worker/main.ts",
    "fmt": "deno lint --fix && deno fmt",
    "lint": "deno check && deno lint && deno fmt --check"
  },
  "imports": {
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.7.2",
    "hono": "npm:hono@^4.8.12",
    "zod": "npm:zod@^4.0.14"
  },
  "fmt": {
    "exclude": ["**/*.md"]
  }
}
